<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://bootswatch.com/3/paper/bootstrap.min.css", type="text/css")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")
        title Product CRUD
    body
        nav.navbar.navbar-inverse
            .container
                .navbar-header
                    a(class="navbar-brand", href="/") Product CRUD
                    button(class="navbar-toggle", data-toggle="toggle", data-target="#myNavbar")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div(class="navbar-collapse collapse", id="myNavBar")
                    ul.nav.navbar-nav
                        li
                            a(href="/") Products
                        li
                            a(href="/create") Create
        .container
            .row
                .col-md-12.jumbotron.text-center
                    h1 Create Product
            .row
                .col-md-6.col-md-offset-3.well
                    form(action='/create' method="POST")
                        .form-group
                            label="Title"
                            input(type="text" , class="form-control", name="title", placeholder="Enter title", required)
                        .form-group
                            label="Price"
                            input(type="number", class="form-control", name="price", placeholder="Enter Price", required)
                        .form-group
                            label="Image"
                            input(type="url", class="form-control", name="image", placeholder="Enter url", required)
                        .form-group
                            label="Info"
                            textarea(class="form-control" name="info", cols="30", rows="5" placeholder="..." required)
                        .form-group
                            label="Company"
                            input(type="text" class="form-control", name="company", placeholder="Company name", required)
                        .form-group
                            input(type="submit", value="Create Product", class="btn btn-info")
        
