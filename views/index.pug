<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://bootswatch.com/3/paper/bootstrap.min.css", type="text/css")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")
        title Product CRUD
    body
        nav.navbar.navbar-inverse
            .container
                .navbar-header
                    a(class="navbar-brand", href="/") Product CRUD
                    button(class="navbar-toggle", data-toggle="toggle" data-target="#myNavbar")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div(class="navbar-collapse collapse" id="myNavBar")
                    ul.nav.navbar-nav
                        li
                            a(href="/") Products
                        li
                            a(href="/create") Create
        .container
            .row
                .col-md-12.jumbotron.text-center
                    h1 Product list
            .row
            for x in products
                .col-md-4
                    .paner.panel-primary
                        .paner-heading  
                            h1.panel-title=x['title']
                        .panel-body
                            img(src=x['image'], class ="img-responsive")
                            ul.list-group   
                                li.list-group-item Price
                                    span.pull-right=x['price']
                                li.list-group-item Company
                                    span.pull-right=x['company']
                                hr
                                h5.text-center="Product Information"
                                p.text-justify=x['info']
                            .panel-footer
                                a(class="btn btn-link", href="/edit/" + x['_id'])
                                    span.glyphicon.glyphicon-edit.text-info
                                a(class="btn btn-link pull-right" href="/delete/"+x['_id'])
                                    span.glyphicon.glyphicon-trash
